{
  "name": "dewDrop, Trust Strangers",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "dewDrop is a meta network to support and trust people",
  "homepage_url": "http://dewDrop.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "contextMenus",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "css": [
        "src/context/context.css",
        "js/jquery.avgrund/style/avgrund.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*",
        "http://www.facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "js": [
        "js/jquery/jquery.js",
        "js/underscore/underscore.js",
        "js/jquery.avgrund/jquery.avgrund.js",
        "src/context/context.js"
      ]
    }
  ]
}